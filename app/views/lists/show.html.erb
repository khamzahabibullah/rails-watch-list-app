<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.picture_url %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>


<div class="container">
<%= link_to '+ Add a movie', new_list_bookmark_path(@list.id), class: 'btn m-4' %>
  <div class="d-flex flex-wrap">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip m-3" style="width: 20rem;">
      <img src="<%= bookmark.movie.poster_url %>" />
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
        </div>
        <div class="d-flex justify-content-between mt-4">
          <p><i class="fas fa-quote-left"></i>   <%= bookmark.comment %></p>
          <%= link_to 'Delete', bookmark_path(bookmark.id),class: 'red-link', method: :delete %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <br>
  <div>
    <h2>Reviews</h2>
    <%= simple_form_for ([@list, @review]) do |f| %>
      <%= f.input :comment %>
      <%= f.input :rating, collection: (0..5) %>

      <%= f.button :submit %>
    <% end %>

    <ul class="list-group mt-5">
      <% @list.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between mb-5 align-items-center">
          <h5 class="m-0"><%= review.comment %></h5>
          <p class="m-0"><%= review.rating %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
